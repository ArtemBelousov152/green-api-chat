{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist/",
      "paths": {
        "pages": ["pages"],
        "components": ["components"],
        "widgets": ["widgets"],
        "types": ["types"],
      },
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "strict": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
      }
    },
    
  }
  